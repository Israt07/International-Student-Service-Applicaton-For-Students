<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.authActivity.LoginFragment"
    android:background="@color/themeColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/login_top_image"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back"
                android:textColor="#464444"
                android:textSize="@dimen/_23sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardBackgroundColor="#F3F3F3"
                android:layout_marginTop="@dimen/_18sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/_14sdp">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/mail_icon"
                        android:layout_gravity="center_vertical"
                        app:tint="@color/themeColor" />

                    <EditText
                        android:id="@+id/emailEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:textColor="#666161"
                        android:textSize="@dimen/_12sdp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        android:layout_marginStart="@dimen/_11sdp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardBackgroundColor="#F3F3F3"
                android:layout_marginTop="@dimen/_18sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/_14sdp">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/password_icon"
                        android:layout_gravity="center_vertical"
                        app:tint="@color/themeColor" />

                    <EditText
                        android:id="@+id/passwordEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:textColor="#666161"
                        android:textSize="@dimen/_12sdp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:layout_marginStart="@dimen/_11sdp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_18sdp">

                <TextView
                    android:id="@+id/registerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Register"
                    android:textColor="#2D2626"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/forgetPasswordButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Forgot Password"
                    android:textColor="#2D2626"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="end"/>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="@dimen/_50sdp"
                android:backgroundTint="@color/buttonBackgroundColor"
                android:padding="@dimen/_15sdp"/>

        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/backIcon"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_19sdp"
        app:cardBackgroundColor="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_margin="@dimen/_5sdp">

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/back_icon"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>