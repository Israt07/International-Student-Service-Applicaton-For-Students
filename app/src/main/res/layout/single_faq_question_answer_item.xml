<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/questionSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/buttonBackgroundColor"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/questionTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/indicationImageview"
                android:text="Question will be here"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_15sdp"/>

            <ImageView
                android:id="@+id/indicationImageview"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/expand_icon"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_8sdp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/answerTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer will be here"
            android:textColor="@color/blackTextColor"
            android:textSize="@dimen/_12sdp"
            android:layout_margin="@dimen/_12sdp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>